<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layout_title_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/ivProfile_detail_header"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_margin="@dimen/photo_padding_home"
                android:src="@drawable/dummy_avatar"
               />

            <TextView
                android:id="@+id/tvName_detail_header"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:text="Jenifer"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_follow_detail_header"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="66dp"
                android:background="@drawable/button_shape"
                android:text="Following"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivPhotoCover_detail_header"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:layout_below="@+id/layout_title_detail_header"
            android:layout_marginTop="7dp" />


        <TextView
            android:id="@+id/tvLocation_detail_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivPhotoCover_detail_header"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/lnlayout"
            android:layout_marginBottom="18dp"
            android:background="#FF13212D"
            android:gravity="center"
            android:text="Isle of Man, UK"
            android:textColor="@color/white"
            android:textSize="8dp" />

        <LinearLayout
            android:id="@+id/lnlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivPhotoCover_detail_header"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabel_detail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="avbadasdasdasd"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvHashTag_detail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="#Hatash"
                android:textSize="19sp" />
        </LinearLayout>



    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_like_detail_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/icon_favourite"
        app:layout_anchor="@id/ivPhotoCover_detail_header"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>